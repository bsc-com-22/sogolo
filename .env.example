# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# Environment
NODE_ENV=development

# Application Configuration
APP_NAME=Sogolo
APP_URL=http://localhost:3000
APP_VERSION=1.0.0

# Email Configuration (if using custom email service)
EMAIL_SERVICE_API_KEY=your-email-service-key
EMAIL_FROM=noreply@sogolo.com

# Payment Configuration (for future integrations)
PAYMENT_PROVIDER_API_KEY=your-payment-provider-key
PAYMENT_WEBHOOK_SECRET=your-webhook-secret

# Analytics (if using)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Security
JWT_SECRET=your-jwt-secret-for-additional-security
ENCRYPTION_KEY=your-encryption-key

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=true

# Development Configuration
DEBUG=true
LOG_LEVEL=debug
